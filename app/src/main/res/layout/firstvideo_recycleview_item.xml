<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_6"
    android:elevation="@dimen/dp_4"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer

            android:id="@+id/ijk_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"></com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6">

            <xw.gank.custom.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dp_45"
                android:visibility="gone"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/title_text"
                    android:text="ddddddddddddddddddddddddddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/playcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_6"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>